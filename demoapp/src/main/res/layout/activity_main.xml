<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tinkoff_sample_header"
        style="@style/TinkoffText.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Header" />

    <TextView
        android:id="@+id/tinkoff_sample_subheader"
        style="@style/TinkoffText.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Subheader" />

    <TextView
        android:id="@+id/tinkoff_sample_title"
        style="@style/TinkoffText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Title" />

    <TextView
        android:id="@+id/tinkoff_sample_subtitle"
        style="@style/TinkoffText.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Subtitle" />

    <TextView
        android:id="@+id/tinkoff_sample_description"
        style="@style/TinkoffText.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description" />

    <Button
        android:id="@+id/tinkoff_sample_button"
        style="@style/TinkoffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button" />

    <Button
        android:id="@+id/tinkoff_sample_textbutton"
        style="@style/TinkoffButton.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Text Button" />
</LinearLayout>