<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============== TEXT ============== -->
    <style name="TinkoffText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/tinkoff_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TinkoffText.Header">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/tinkoff_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">23sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TinkoffText.Title">
        <item name="android:textColor">?attr/tinkoff_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">19sp</item>
    </style>

    <style name="TinkoffText.Subtitle">
        <item name="android:textColor">?attr/tinkoff_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">15sp</item>
    </style>

    <style name="TinkoffText.Subheader">
        <item name="android:textColor">?attr/tinkoff_subtext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">23sp</item>
    </style>

    <style name="TinkoffText.Description">
        <item name="android:textColor">?attr/tinkoff_subtext</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">15sp</item>
    </style>

