<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="?attr/tinkoff_button_ripple">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="#52000000"/>
                    <corners android:radius="@dimen/tinkoff_corner_radius_12dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="?attr/tinkoff_button_background"/>
                    <corners android:radius="@dimen/tinkoff_corner_radius_12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape>
            <solid android:color="?attr/tinkoff_button_background_disabled"/>
            <corners android:radius="@dimen/tinkoff_corner_radius_12dp"/>
        </shape>
    </item>
</selector>